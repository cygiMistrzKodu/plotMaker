<IntrestRateResultView>
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"

#        canvas.before:
#            Color:
#                rgb: 1, 1, 1, 1
#            Line:
#                width: 2
#                rounded_rectangle: self.x, self.y - 10, self.width, self.height - 10, 10

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, None)

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                size_hint_y: None
                height: 30
                width: 230
                pos_hint: {"center_y": 0.0}
                spacing: 20
#                padding: [0,50,0,0]
                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: 60
                    size_hint_x: None
                    width: 230

                    BoxLayout:
                        size_hint_x: None
                        size_hint_y: None
                        width: 200
                        height: 40


                        Label:
                            id: deposit_amount_result_id
                            size_hint_x: None
                            size_hint_y: None
                            width: 120
                            text: "Kapitał: "
                            halign: "left"
                            valign: "center"
                            text_size: self.size
                            height: 30

                        TextInput:
                            text: root.depositAmount + " zł"
                            size_hint_x: None
                            size_hint_y: None
                            width: 150
                            height: 30
                            readonly: True

                    BoxLayout:
                        size_hint_x: None
                        size_hint_y: None
                        width: 200
                        height: 40
#                        spacing: 0


                        Label:
                            id: deposit_amount_result_id
                            size_hint_x: None
                            size_hint_y: None
                            width: 120
                            text: "Czas: "
                            halign: "left"
                            valign: "center"
                            text_size: self.size
                            height: 30

                        TextInput:
                            text: root.depositTime + " m."
                            size_hint_x: None
                            size_hint_y: None
                            width: 150
                            height: 30
                            readonly: True

                    BoxLayout:
                        size_hint_x: None
                        size_hint_y: None
                        width: 200
                        height: 40

                        Label:
                            id: deposit_amount_result_id
                            size_hint_x: None
                            size_hint_y: None
                            width: 120
                            text: "Orocentowanie: "
                            halign: "left"
                            valign: "center"
                            text_size: self.size
                            height: 30

                        TextInput:
                            text: root.annualInterestRate + "%"
                            size_hint_x: None
                            size_hint_y: None
                            width: 150
                            height: 30
                            readonly: True

            BoxLayout:
                orientation: "vertical"
#                size_hint_y: None
                size_hint_x: None

                Label:
                    text: "[u]Odsetki[/u]"
                    font_size: 18
                    bold: True
                    markup: True
                    size: self.texture_size
                    padding: [540,0,0,0]

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_x: None
                    width: 580
                    spacing: 20
                    padding: [60,0,0,0]

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        spacing: 5

                        Label:
                            text: "Dzienne"
                            size_hint_y: None
                            height: 20

                        TextInput:
                            id:  interest_daily_id
                            size_hint_x: None
                            size_hint_y: None
                            width: 150
                            height: 30
                            text: "5zł"
                            readonly: True

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        spacing: 5

                        Label:
                            text: "Miesiecznie"
                            size_hint_y: None
                            height: 20

                        TextInput:
                            id:  interest_monthly_id
                            size_hint_x: None
                            size_hint_y: None
                            height: 30
                            width: 150
                            text: "50zł"
                            readonly: True

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        spacing: 5

                        Label:
                            text: "Rocznie"
                            size_hint_y: None
                            height: 20

                        TextInput:
                            id:  interest_yearly_id
                            size_hint_x: None
                            size_hint_y: None
                            height: 30
                            width: 150
                            text: "50zł"
                            readonly: True


