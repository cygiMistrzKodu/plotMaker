<IntrestRateResultView>
    GridLayout:
        cols: 3
        size_hint_y: None
        height: self.minimum_height
        spacing: 10
        padding: [10,40,10,10]

        canvas.before:
            Color:
                rgb: 1, 1, 1, 1
            Line:
                width: 2
                rounded_rectangle: self.x, self.y - 10, self.width, self.height - 10, 10


        Label:
            id: deposit_amount_result_id
            text: "Kapitał: " + root.depositAmount + " zł"
            valign: "middle"
            halign: "left"

        Label:
            id: deposit_time_result_id
            text: "Czas: " + root.depositTime + " miesięcy"
            valign: "middle"
            halign: "left"

        Label:
            id: annual_interest_rate_id
            text: "Orpcentowanie: " +root.annualInterestRate +"%"
            valign: "middle"
            halign: "left"

        Widget:
            size_hint_x: None
            widget: 200
        Widget:
            size_hint_x: None
            widget: 200
        Widget:
            size_hint_x: None
            widget: 200

        Label:
            id:  interest_daily_id
            text: "odsetki dziennie: 5zł"
            valign: "middle"

        Label:
            id:  interest_monthly_id
            text: "odsetki miesiecznie"
            valign: "middle"

        Label:
            id:  interest_yearly_id
            text: "odsetki rocznie"
            valign: "middle"

