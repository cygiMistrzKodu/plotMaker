<IntrestRateResultView>
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"

#        canvas.before:
#            Color:
#                rgb: 1, 1, 1, 1
#            Line:
#                width: 2
#                rounded_rectangle: self.x, self.y - 10, self.width, self.height - 10, 10

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, None)

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                size_hint_y: None
                height: 30
                width: 230
                padding: [0,0,0,22]
                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: 60
                    size_hint_x: None
                    width: 230

                    BoxLayout:
                        size_hint_x: None
                        size_hint_y: None
                        width: 200
                        height: 25


                        Label:
                            id: deposit_amount_result_id
                            size_hint_x: None
                            size_hint_y: None
                            width: 120
                            text: "Kapitał: "
                            halign: "left"
                            text_size: self.size
                            height: 25

                        Label:
                            text: root.depositAmount + " zł"
                            size_hint_x: None
                            size_hint_y: None
                            width: 100
                            halign: "left"
                            text_size: self.size
                            height: 25

                    BoxLayout:
                        size_hint_x: None
                        size_hint_y: None
                        width: 200
                        height: 20
#                        spacing: 0


                        Label:
                            id: deposit_amount_result_id
                            size_hint_x: None
                            size_hint_y: None
                            width: 120
                            text: "Czas: "
                            halign: "left"
                            text_size: self.size
                            height: 25

                        Label:
                            text: root.depositTime + " m."
                            size_hint_x: None
                            size_hint_y: None
                            halign: "left"
                            text_size: self.size
                            height: 25

                    BoxLayout:
                        size_hint_x: None
                        size_hint_y: None
                        width: 200
                        height: 20


                        Label:
                            id: deposit_amount_result_id
#                            size_hint_x: 0.3
                            size_hint_x: None
                            size_hint_y: None
                            width: 120
                            text: "Orocentowanie: "
                            halign: "left"
                            text_size: self.size
                            height: 25

                        Label:
                            text: root.annualInterestRate + "%"
                            size_hint_x: None
                            size_hint_y: None
                            halign: "left"
                            text_size: self.size
                            height: 25

            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    orientation: "horizontal"
                    Label:
                        text_size:
                        text: "[u]Odsetki[/u]"
                        font_size: 18
                        bold: True
                        markup: True

                BoxLayout:
                    orientation: "horizontal"
                    padding: [0,0,0,22]

                    BoxLayout:
                        orientation: "vertical"

                        Label:
                            text: "Dzienne"

                        Label:
                            id:  interest_daily_id
                            text: "5zł"
                            valign: "middle"

                    BoxLayout:
                        orientation: "vertical"

                        Label:
                            text: "Miesiecznie"

                        Label:
                            id:  interest_monthly_id
                            text: "50zł"
                            valign: "middle"

                    BoxLayout:
                        orientation: "vertical"

                        Label:
                            text: "Rocznie"

                        Label:
                            id:  interest_monthly_id
                            text: "50zł"
                            valign: "middle"

