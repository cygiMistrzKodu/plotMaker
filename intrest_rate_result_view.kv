<IntrestRateResultView>
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        padding: [0,20,0,0]

        BoxLayout:
            orientation: "horizontal"
            size_hint: (None, None)
            width: 700
            height: self.minimum_height + 70
            width: self.minimum_width + 360

            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
                Line:
                    width: 1.5
                    rounded_rectangle: (self.x - 8, self.y - 30, self.width + 10, self.height + 50, 10)
                Color:
                    rgba: 0.98, 0.98, 1, 0.04
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                size_hint_y: None
                height: 30
                width: 230
                pos_hint: {"center_y": 0.0}
                spacing: 20
                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: 60
                    size_hint_x: None
                    width: 230

                    BoxLayout:
                        size_hint_x: None
                        size_hint_y: None
                        width: 100
                        height: 40

                        Label:
                            id: deposit_amount_result_id
                            size_hint_x: None
                            size_hint_y: None
                            width: 120
                            text: "Kapitał (zł):"
                            halign: "left"
                            valign: "center"
                            text_size: self.size
                            height: 30

                        TextInput:
                            text: root.depositAmount
                            size_hint_x: None
                            size_hint_y: None
                            width: 100
                            height: 30
                            readonly: True

                    BoxLayout:
                        size_hint_x: None
                        size_hint_y: None
                        width: 100
                        height: 40


                        Label:
                            id: deposit_amount_result_id
                            size_hint_x: None
                            size_hint_y: None
                            width: 120
                            text: "Czas (m.): "
                            halign: "left"
                            valign: "center"
                            text_size: self.size
                            height: 30

                        TextInput:
                            text: root.depositTimeMonths
                            size_hint_x: None
                            size_hint_y: None
                            width: 100
                            height: 30
                            readonly: True

                    BoxLayout:
                        size_hint_x: None
                        size_hint_y: None
                        width: 100
                        height: 40

                        Label:
                            id: deposit_amount_result_id
                            size_hint_x: None
                            size_hint_y: None
                            width: 120
                            text: "Orocentowanie (%): "
                            halign: "left"
                            valign: "center"
                            text_size: self.size
                            height: 30

                        TextInput:
                            text: root.bankInterestRate
                            size_hint_x: None
                            size_hint_y: None
                            width: 100
                            height: 30
                            readonly: True

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None

                Label:
                    text: "[u]Odsetki (zł)[/u]"
                    font_size: 18
                    bold: True
                    markup: True
                    size: self.texture_size
                    padding: [430,0,0,0]

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_x: None
                    width: 450
                    spacing: 20
                    padding: [90,0,0,0]

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        spacing: 5

                        Label:
                            text: "Dzienne"
                            size_hint_y: None
                            height: 20

                        TextInput:
                            id:  daily_interest_rate_result_id
                            text: root.dailyIntrestRateIncrease
                            size_hint_x: None
                            size_hint_y: None
                            width: 100
                            height: 30
                            readonly: True

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        spacing: 5

                        Label:
                            text: "Miesięcznie"
                            size_hint_y: None
                            height: 20

                        TextInput:
                            id:  monthly_interest_rate_result_id
                            size_hint_x: None
                            size_hint_y: None
                            height: 30
                            width: 100
                            text: root.monthlyIntrestRateIncrease
                            readonly: True

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        spacing: 5

                        Label:
                            text: "Rocznie"
                            size_hint_y: None
                            height: 20

                        TextInput:
                            id:  annual_interest_rate_yearly_id
                            size_hint_x: None
                            size_hint_y: None
                            height: 30
                            width: 100
                            text: root.annualIntrestRateIncrease
                            readonly: True


