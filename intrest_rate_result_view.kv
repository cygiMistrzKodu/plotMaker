<IntrestRateResultView>
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        padding: [0,50,0,0]

        BoxLayout:
            orientation: "vertical"

            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
                Line:
                    width: 1.5
                    rounded_rectangle: (self.x, self.y - 50, self.width, self.height + 50 , 10)
                Color:
                    rgba: 0.98, 0.98, 1, 0.04
                RoundedRectangle:
                    pos: self.x, self.y
                    size: self.size
                    radius: [10]

            Label:
                text: "[u]Odsetki (zł)[/u]"
                font_size: 18
                bold: True
                markup: True
                size: self.texture_size
                size_hint_x: 1

            BoxLayout:
                orientation: "horizontal"
                size_hint: (None, None)
                width: 700
                height: self.minimum_height + 160
                width: self.minimum_width + 360

                BoxLayout:
                    orientation: "vertical"
                    size_hint_x: None
                    size_hint_y: None
                    height: 30
                    width: 230
                    pos_hint: {"center_y": 0.0}
                    spacing: 20

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: 60
                        size_hint_x: None
                        width: 230

                        BoxLayout:
                            size_hint_x: None
                            size_hint_y: None
                            width: 100
                            height: 40

                            Label:
                                id: deposit_amount_id
                                size_hint_x: None
                                size_hint_y: None
                                width: 120
                                text: "Kapitał (zł):"
                                halign: "left"
                                valign: "center"
                                text_size: self.size
                                height: 30

                            TextInput:
                                text: root.depositAmount
                                size_hint_x: None
                                size_hint_y: None
                                width: 100
                                height: 30
                                readonly: True

                        BoxLayout:
                            size_hint_x: None
                            size_hint_y: None
                            width: 100
                            height: 40


                            Label:
                                id: deposit_time_months_id
                                size_hint_x: None
                                size_hint_y: None
                                width: 120
                                text: "Czas (m.): "
                                halign: "left"
                                valign: "center"
                                text_size: self.size
                                height: 30

                            TextInput:
                                text: root.depositTimeMonths
                                size_hint_x: None
                                size_hint_y: None
                                width: 100
                                height: 30
                                readonly: True

                        BoxLayout:
                            size_hint_x: None
                            size_hint_y: None
                            width: 100
                            height: 40

                            Label:
                                id: bank_interest_rate_id
                                size_hint_x: None
                                size_hint_y: None
                                width: 120
                                text: "Orocentowanie (%): "
                                halign: "left"
                                valign: "center"
                                text_size: self.size
                                height: 30

                            TextInput:
                                text: root.bankInterestRate
                                size_hint_x: None
                                size_hint_y: None
                                width: 100
                                height: 30
                                readonly: True

                BoxLayout:
                    orientation: "vertical"
                    size_hint_x: None

                    BoxLayout:
                        orientation: "horizontal"
                        size_hint_x: None
                        size_hint_y: None
                        width: 440
                        spacing: 20

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_x: 0.5

                            Label:
                                text: "Odsetki brutto"

                            TextInput:
                                text: "9456"

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_x: 0.5

                            Label:
                                text: "Odsetki netto"

                            TextInput:
                                text: "7777"


                    BoxLayout:
                        orientation: "horizontal"
                        size_hint_x: None
                        width: 440
                        spacing: 20

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            spacing: 5
                            size_hint_x: 1

                            Label:
                                text: "Dzienne"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  daily_interest_rate_increase_id
                                text: root.dailyIntrestRateIncrease
                                size_hint_y: None
                                height: 30
                                readonly: True

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            spacing: 5
                            size_hint_x: 1

                            Label:
                                text: "Miesięcznie"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  monthly_interest_rate_Increase_id
                                size_hint_y: None
                                height: 30
                                text: root.monthlyIntrestRateIncrease
                                readonly: True

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            spacing: 5
                            size_hint_x: 1

                            Label:
                                text: "Rocznie"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  annual_interest_rate_Increase_id
                                size_hint_y: None
                                height: 30
                                text: root.annualIntrestRateIncrease
                                readonly: True


