<IntrestRateResultView>
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"

#        canvas.before:
#            Color:
#                rgb: 1, 1, 1, 1
#            Line:
#                width: 2
#                rounded_rectangle: self.x, self.y - 10, self.width, self.height - 10, 10

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, None)

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: 230
                pos_hint: {"center": 0.5}
                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: 60

                    BoxLayout:
                        size_hint_x: None
                        width: 200
                        spacing: 0


                        Label:
                            id: deposit_amount_result_id
                            size_hint_x: None
                            width: 120
                            text: "Kapitał: "
                            halign: "left"
                            text_size: self.size

                        Label:
                            text: root.depositAmount + " zł"
                            size_hint_x: 0.7
                            halign: "left"
                            text_size: self.size

                    BoxLayout:
                        size_hint_x: None
                        width: 200
                        spacing: 0


                        Label:
                            id: deposit_amount_result_id
                            size_hint_x: None
                            width: 120
                            text: "Czas: "
                            halign: "left"
                            text_size: self.size

                        Label:
                            text: root.depositTime + " miesięcy"
                            size_hint_x: 0.7
                            halign: "left"
                            text_size: self.size

                    BoxLayout:
                        size_hint_x: None
                        width: 200
                        spacing: 0


                        Label:
                            id: deposit_amount_result_id
#                            size_hint_x: 0.3
                            size_hint_x: None
                            width: 120
                            text: "Orocentowanie: "
                            halign: "left"
                            text_size: self.size

                        Label:
                            text: root.annualInterestRate + "%"
                            size_hint_x: 0.7
                            halign: "left"
                            text_size: self.size

            BoxLayout:
                orientation: "vertical"
#                size_hint_x: 0.5

                BoxLayout:
                    orientation: "horizontal"

                    BoxLayout:
                        orientation: "vertical"

                        Label:
                            text: "Dzienne"

                        Label:
                            id:  interest_daily_id
                            text: "5zł"
                            valign: "middle"

                    BoxLayout:
                        orientation: "vertical"

                        Label:
                            text: "Miesiecznie"

                        Label:
                            id:  interest_monthly_id
                            text: "50zł"
                            valign: "middle"

                    BoxLayout:
                        orientation: "vertical"

                        Label:
                            text: "Rocznie"

                        Label:
                            id:  interest_monthly_id
                            text: "50zł"
                            valign: "middle"

