<LanguageSelector>:
    orientation: "horizontal"
    spacing: 5
    padding: 10

    Label:
        text: app._("Language")
        size_hint_x: None
        width: self.texture_size[0]

    Spinner:
        text: "pl"
        values: ["pl", "en"]
        size_hint_x: None
        width: 80
        on_text: change_language(self.text)

