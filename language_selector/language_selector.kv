<LanguageSelector>:
    canvas.before:
        Color:
            rgba: 0.5, 0, 0, 0.1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "vertical"
    size_hint_y: None
    size_hint_x: None
    size: 50, 80
    spacing: 0
    padding: 0

    Label:
        text: app._("Language")
        size_hint_y: 0.5
        halign: "center"
        valign: "middle"
        text_size: self.size
    Spinner:
        canvas.before:
            Color:
                rgba: 1, 0, 0, 0.1
            Rectangle:
                pos: self.pos
                size: self.size

        text: "pl"
        values: ["pl", "en"]
        size_hint_y: 0.5
        size_hint_x: None
        width: 50
        on_text: change_language(self.text)

