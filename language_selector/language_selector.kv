<LanguageSelector>:
    orientation: "vertical"
    size_hint_y: None
    size_hint_x: None
    width: self.minimum_width
    padding: [0,0,0,20]

    Label:
        id: language_selector_label
        text: app._("Language")
        size_hint_y: 0.5
        size_hint_x: None
        halign: "center"
        valign: "middle"
        text_size: None, None
        width: self.texture_size[0] + 10

    Spinner:
        text: "pl"
        values: ["pl", "en"]
        size_hint_y: None
        size_hint_x: None
        height: 40
        width: 50
        pos_hint: {"right": 1}
        on_text: root.change_language(self.text)

