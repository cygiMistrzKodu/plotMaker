<IntrestRateInput>:
    AnchorLayout:
        orientation: "vertical"
        anchor_x: "left"
        anchor_y: "top"
        padding: 40
        BoxLayout:
            orientation: "vertical"
            size_hint: (1, 1)
            spacing: 3
            width: 400
            height: 250

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: 50

                Label:
                    id: deposit_amount_label
                    text: "Kapitał:"
                    size_hint_x: 0.3
                    size_hint_y: None
                    height: 50
                    valign: "middle"
                    halign: "right"
                    text_size: self.size

                TextInput:
                    id: deposit_input_id
                    hint_text: "Wpisz kapitał zł"
                    size_hint_x: 0.7
                    input_filter: "int"
                    height: 50

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: 50
                Label:
                    id: deposit_time_label
                    text: "Czas lokaty: "
                    size_hint_x: 0.3
                    height: 50
                    size_hint_y: None
                    valign: "middle"
                    halign: "right"
                    text_size: self.size
                TextInput:
                    id: deposit_time_input_id
                    hint_text: "Wpisz czas lokaty w miesiącach"
                    input_filter: "int"
                    size_hint_x: 0.7

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: 50
                Label:
                    id: annual_interest_rate_label
                    text: "Oprocentowanie: "
                    size_hint_x: 0.3
                    height: 50
                    size_hint_y: None
                    valign: "middle"
                    halign: "right"
                    text_size: self.size
                TextInput:
                    id: annual_interest_rate_input_id
                    size_hint_x: 0.7
                    hint_text: "Wpisz oprocentoawnie w %"
                    input_filter: "float"
                    on_text: root.process_intrest(self)

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                spacing: 36
                height: 50

                AnchorLayout:
                    anchor_x: "right"
                    size_hint_y: None
                    height: 50
                    Button:
                        text: "Oblicz"
                        size_hint: (None, None)
                        size: (80,40)
                        on_press: root.add_some_data_test()

            BoxLayout:
                orientation: "vertical"
                size_hint: (1,1)
                height: self.minimum_height

                ScrollView:
                    size_hint: (1,1)
                    do_scroll_x: False
                    do_scroll_y: True
                    bar_width: 10
                    scroll_type: [ 'content' , 'bars' ]
                    scroll_distance: 100

                    RecycleView:
                        id: intrest_rate_result
                        viewclass: "IntrestRateResultView"
                        size_hint: (1,1)
                        effect_cls: "ScrollEffect"
                        spacing: 10

                        RecycleBoxLayout:
                            orientation: "vertical"
                            default_size_hint: (1, None)
                            default_size: (None, 50)
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: 20







