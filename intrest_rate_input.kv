<IntrestRateInput>:
    AnchorLayout:
        orientation: "vertical"
        anchor_x: "left"
        anchor_y: "top"
        padding: 40
        BoxLayout:
            orientation: "vertical"
            size_hint: (1, 1)
            spacing: 3
            width: 400
            height: 250

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: 30
                spacing: 5

                Label:
                    id: deposit_amount_label
                    text: "Kapitał: "
                    size_hint_x: None
                    size_hint_y: None
                    height: 35
                    valign: "middle"
                    halign: "right"
                    text_size: self.size
                    width: 115

                TextInput:
                    id: deposit_input_id
                    hint_text: "kapitał zł"
                    size_hint_x: None
                    input_filter: "int"
                    height: 35
                    width: 150

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: 30
                spacing: 5
                Label:
                    id: deposit_time_label
                    text: "Czas lokaty: "
                    height: 35
                    size_hint_x: None
                    size_hint_y: None
                    valign: "middle"
                    halign: "right"
                    text_size: self.size
                    width: 115
                TextInput:
                    id: deposit_time_input_id
                    hint_text: "czas w miesiącach"
                    input_filter: "int"
                    size_hint_x: None
                    width: 150

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                width: 260
                height: 30
                spacing: 5
                Label:
                    id: annual_interest_rate_label
                    text: "Oprocentowanie: "
                    height: 35
                    size_hint_y: None
                    size_hint_x: None
                    valign: "middle"
                    halign: "right"
                    text_size: self.size
                    width: 115
                TextInput:
                    id: annual_interest_rate_input_id
                    size_hint_x: None
                    hint_text: "Oprocentoawnie w %"
                    input_filter: "float"
                    on_text: root.process_intrest(self)
                    valign: "middle"
                    halign: "left"
                    width: 150

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                spacing: 20
                height: 50

                AnchorLayout:
                    anchor_x: "left"
                    size_hint_y: None
                    height: 50
                    padding: [190,0,0,0]
                    Button:
                        text: "Oblicz"
                        size_hint: (None, None)
                        size: (80,40)
                        on_press: root.add_some_data_test()

            BoxLayout:
                orientation: "vertical"
                size_hint: (1,1)
                height: self.minimum_height
                ScrollView:
                    size_hint: (1,1)
                    do_scroll_x: False
                    do_scroll_y: True
                    bar_width: 10
                    scroll_type: [ 'content' , 'bars' ]
                    scroll_distance: 100

                    RecycleView:
                        id: intrest_rate_result
                        viewclass: "IntrestRateResultView"
                        size_hint: (1,1)
                        effect_cls: "ScrollEffect"

                        RecycleBoxLayout:
                            orientation: "vertical"
                            default_size_hint: (1, None)
                            default_size: (None, 120)
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: 40







