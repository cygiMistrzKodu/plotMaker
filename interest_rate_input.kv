<InterestRateInput>:
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        padding: 20
        BoxLayout:
            orientation: "vertical"
            size_hint: (None, 1)
            width: 720

            canvas.before:
                Color:
                    rgba: 0.11, 0.14, 0.2, 1
                RoundedRectangle:
                    pos: self.x - 8, self.y - 10
                    size: self.width + 10, self.height + 20
                    radius: [12]
                Color:
                    rgba: 1.0, 0.85, 0.25, 0.35
                Line:
                    width: 1.5
                    rounded_rectangle: (self.x -5, self.y - 6, self.width + 6, self.height + 12, 20)

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: 30
                spacing: 5

                Label:
                    id: deposit_amount_label
                    text: "Kapitał: "
                    size_hint_x: None
                    size_hint_y: None
                    height: 35
                    valign: "middle"
                    halign: "right"
                    text_size: self.size
                    width: 115
                    color: 1, 0.4, 0.4, 1

                TextInput:
                    id: deposit_input_id
                    hint_text: "kapitał zł"
                    size_hint_x: None
                    input_filter: "int"
                    height: 35
                    width: 150
                    on_text: root.validate_deposit_amount(self.text)
                    background_color: (1, 0.9, 0.9, 1) if root.depositAmountError else (1, 1, 1, 1)

                Label:
                    id: deposit_amount_error_id
                    text: root.depositAmountError
                    size_hint_x: None
                    halign: "left"
                    valign: "middle"
                    width: 250
                    color: 1, 0.2, 0.2, 1
                    text_size: self.size


            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: 30
                spacing: 5
                Label:
                    id: deposit_time_label
                    text: "Czas lokaty: "
                    height: 35
                    size_hint_x: None
                    size_hint_y: None
                    valign: "middle"
                    halign: "right"
                    text_size: self.size
                    width: 115
                TextInput:
                    id: deposit_time_input_id
                    hint_text: "czas w miesiącach"
                    input_filter: "int"
                    size_hint_x: None
                    width: 150
                    on_text: root.validate_deposit_time(self.text)
                    background_color: (1, 0.9, 0.9, 1) if root.depositTimeMonthsError else (1, 1, 1, 1)
                Label:
                    id: deposit_time_error_id
                    text: root.depositTimeMonthsError
                    size_hint_x: None
                    halign: "left"
                    valign: "middle"
                    width: 250
                    color: 1, 0.2, 0.2, 1
                    text_size: self.size


            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                width: 260
                height: 30
                spacing: 5
                Label:
                    id: annual_interest_rate_label
                    text: "Oprocentowanie: "
                    height: 35
                    size_hint_y: None
                    size_hint_x: None
                    valign: "middle"
                    halign: "right"
                    text_size: self.size
                    width: 115
                TextInput:
                    id: bank_interest_rate_input_id
                    size_hint_x: None
                    hint_text: "Oprocentoawnie w %"
                    input_filter: "float"
                    valign: "middle"
                    halign: "left"
                    width: 150
                    on_text: root.validate_bank_interest_rate(self.text)
                    background_color: (1, 0.9, 0.9, 1) if root.bankInterestRateError else (1, 1, 1, 1)
                Label:
                    id: bank_interest_rate_error_id
                    text: root.bankInterestRateError
                    size_hint_x: None
                    halign: "left"
                    valign: "middle"
                    width: 250
                    color: 1, 0.2, 0.2, 1
                    text_size: self.size


            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                spacing: 20
                height: 50

                AnchorLayout:
                    anchor_x: "left"
                    size_hint_y: None
                    height: 50
                    padding: [190,0,0,0]
                    Button:
                        text: "Oblicz"
                        size_hint: (None, None)
                        size: (80,40)
                        on_press: root.calculate_interest_rate()

            BoxLayout:
                orientation: "vertical"
                size_hint: (1,1)
                ScrollView:
                    size_hint: (1,1)
                    do_scroll_x: False
                    do_scroll_y: True
                    bar_width: 10
                    scroll_type: [ 'content' , 'bars' ]
                    scroll_distance: 100

                    RecycleView:
                        id: intrest_rate_result
                        viewclass: "InterestRateResultView"
                        size_hint: (1,1)
                        effect_cls: "ScrollEffect"

                        RecycleBoxLayout:
                            orientation: "vertical"
                            default_size_hint: (1, None)
                            default_size: (None, 280)
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: 10







