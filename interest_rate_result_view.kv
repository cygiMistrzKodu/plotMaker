<InterestRateResultView>
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        padding: [0,50,0,0]

        BoxLayout:
            orientation: "vertical"

            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
                Line:
                    width: 1.5
                    rounded_rectangle: (self.x, self.y - 10, self.width, self.height + 50 , 10)
                Color:
                    rgba: 0.98, 0.98, 1, 0.04
                RoundedRectangle:
                    pos: self.x, self.y
                    size: self.size
                    radius: [10]

            Label:
                text: "[u]Odsetki (zł)[/u]"
                font_size: 18
                bold: True
                markup: True
                size: self.texture_size
                size_hint_y: None

            BoxLayout:
                orientation: "horizontal"
                spacing: 10

                BoxLayout:
                    orientation: "vertical"
                    size_hint_x: None
                    padding: [10,0,0,0]
                    width: 230
                    spacing: 20
                    size_hint_y: 0.8

                    BoxLayout:
                        orientation: "vertical"
                        spacing: 10

                        BoxLayout:
                            size_hint_y: 1

                            Label:
                                id: deposit_amount_id
                                text: "Kapitał (zł):"
                                text_size: self.size
                                halign: "center"
                                valign: "middle"
                                size_hint_x: 0.6

                            TextInput:
                                text: root.depositAmount
                                size_hint_x: 1
                                readonly: True

                        BoxLayout:
                            size_hint_y: 1

                            Label:
                                id: deposit_time_months_id
                                text: "Czas (m.): "
                                text_size: self.size
                                halign: "center"
                                valign: "middle"
                                size_hint_x: 0.6

                            TextInput:
                                text: root.depositTimeMonths
                                size_hint_x: 1
                                readonly: True

                        BoxLayout:
                            size_hint_y: 1

                            Label:
                                id: bank_interest_rate_id
                                text: "Procent (%): "
                                text_size: self.size
                                halign: "center"
                                valign: "middle"
                                size_hint_x: 0.6

                            TextInput:
                                text: root.bankInterestRate
                                size_hint_x: 1
                                readonly: True

                BoxLayout:
                    orientation: "vertical"

                    BoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        padding:[10,0,10,0]
                        height: 70
                        spacing: 20

                        BoxLayout:
                            orientation: "vertical"
                            spacing: 5
                            size_hint_x: 0.5

                            Label:
                                text: "Odsetki brutto"

                            TextInput:
                                text: root.intrestRateGross

                        BoxLayout:
                            orientation: "vertical"
                            spacing: 5
                            size_hint_x: 0.5

                            Label:
                                text: "Odsetki netto"

                            TextInput:
                                text: root.intrestRateNet

                        BoxLayout:
                            orientation: "vertical"
                            spacing: 5
                            size_hint_x: 0.5

                            Label:
                                text: "Podatek"

                            TextInput:
                                text: root.intrestRateTax


                    BoxLayout:
                        orientation: "horizontal"
                        padding:[10,0,10,0]
                        spacing: 20

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            size_hint_x: 1
                            spacing: 5

                            Label:
                                text: "Dzienne brutto"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  daily_interest_rate_gross_increase_id
                                text: root.dailyIntrestRateIncreaseGross
                                size_hint_y: None
                                height: 30
                                readonly: True

                            Label:
                                text: "Dzienne netto"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  daily_interest_rate_net_increase_id
                                text: root.dailyIntrestRateIncreaseNet
                                size_hint_y: None
                                height: 30
                                readonly: True

                            Label:
                                text: "podatek dziennie"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  daily_interest_rate_tax_increase_id
                                text: root.dailyIntrestRateIncreaseTax
                                size_hint_y: None
                                height: 30
                                readonly: True

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            spacing: 5
                            size_hint_x: 1

                            Label:
                                text: "Miesięcznie brutto"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  monthly_interest_rate_gross_increase_id
                                size_hint_y: None
                                height: 30
                                text: root.monthlyIntrestRateIncreaseGross
                                readonly: True

                            Label:
                                text: "Miesięcznie netto"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  monthly_interest_rate_net_increase_id
                                size_hint_y: None
                                height: 30
                                text: root.monthlyIntrestRateIncreaseNet
                                readonly: True

                            Label:
                                text: "Podatek miesięcznie"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  monthly_interest_rate_tax_increase_id
                                size_hint_y: None
                                height: 30
                                text: root.monthlyIntrestRateIncreaseTax
                                readonly: True

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            spacing: 5
                            size_hint_x: 1

                            Label:
                                text: "Rocznie brutto"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  annual_interest_rate_gross_increase_id
                                size_hint_y: None
                                height: 30
                                text: root.annualIntrestRateIncreaseGross
                                readonly: True

                            Label:
                                text: "Rocznie netto"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  annual_interest_rate_net_increase_id
                                size_hint_y: None
                                height: 30
                                text: root.annualIntrestRateIncreaseNet
                                readonly: True

                            Label:
                                text: "Podatek rocznie"
                                size_hint_y: None
                                height: 20

                            TextInput:
                                id:  annual_interest_rate_tax_increase_id
                                size_hint_y: None
                                height: 30
                                text: root.annualIntrestRateIncreaseTax
                                readonly: True


